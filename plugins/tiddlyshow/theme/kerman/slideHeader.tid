[data-tags*="<<sl>>"][data-tags ~="slideHeader"] .tc-tiddler-body h1{
  padding: 5px 5px 5px 50px; /* The last is left padding*/
  border-width:  0px;
  border-left-style: solid;
  border-left-width:10px;
  border-left-color: #ffffff;
  }

[data-tags*="<<sl>>"][data-tags ~="slideHeader"] .tc-tiddler-body h2{
  padding: 5px 5px 5px 60px; /* The last is left padding*/
  }

[data-tags*="<<sl>>"][data-tags ~="slideHeader"] .tc-tiddler-body h1{
  font-size:3em;
}

[data-tags*="<<sl>>"][data-tags ~="slideHeader"] .tc-tiddler-body h2{
  font-size:2em;
}

