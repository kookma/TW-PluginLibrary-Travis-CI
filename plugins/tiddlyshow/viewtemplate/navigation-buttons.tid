\define no-more-slides()
<button class="tc-btn-invisible disabled" disabled>{{$:/plugins/kookma/tiddlyshow/images/stop.svg}}</button>
\end

\define previous-slide()
    <$list filter="[tag<parent>!tag[slideFooter]!tag[thumbnails]before<currentTiddler>]" 
           emptyMessage=<<no-more-slides>> >
      <$button class="tc-btn-invisible buttons-no-outline" 
        to={{!!title}} set="$:/plugins/kookma/tiddlyshow/state" 
        setTo={{!!title}} tooltip={{!!title}} >
        {{$:/plugins/kookma/tiddlyshow/images/slide-previous.svg}}
      </$button>
    </$list>
\end

\define next-slide()
    <$list filter="[tag<parent>!tag[slideFooter]!tag[thumbnails]after<currentTiddler>]" emptyMessage=<<no-more-slides>>>
      <$button class="tc-btn-invisible buttons-no-outline" to={{!!title}} 
        set="$:/plugins/kookma/tiddlyshow/state" 
        setTo={{!!title}} 
        tooltip={{!!title}} >
        {{$:/plugins/kookma/tiddlyshow/images/slide-next.svg}}
      </$button>
    </$list>
\end

\define slide-list()
<div class="tiddlyshow-tooltip"> 
  <$button class="tc-btn-invisible buttons-no-outline">{{$:/plugins/kookma/tiddlyshow/images/slide-list.svg}}</$button>
  <div class="tiddlyshow-tooltiptext">
    <$macrocall $name="trackable-links" tag=<<parent>> />
  </div>
</div>
\end


\define show-slidenumber()
<$count filter='[tag<parent>!tag[slideFooter]!tag[thumbnails]allbefore:include<currentTiddler>]'/>
\end


<$set name="parent" value={{$:/plugins/kookma/tiddlyshow/state!!current-slideshow}}>

<$list filter="[all[current]tag<parent>!tag[slideFooter]!tag[thumbnails]]"> <!-- only show slide number if it is belong to active slideshow and not tagged with slideFooter, thumbnails -->

<div class="tiddlyshow-slide-footer">
  <div class="tiddlyshow-slide-footer-buttons">
    <<previous-slide>>
    <<next-slide>>
    <<slide-list>>
  </div>
  <div class="tiddlyshow-slide-footer-text"> <!--show all tiddlers tagged with slideFooter and parent as footer --> 
    <$list filter="[title<parent>addsuffix[ - Footer]]" variable="slide-footer">
         <$transclude tiddler=<<slide-footer>> field="text" mode="inline"/> 
    </$list>
  </div>
  <div class="tiddlyshow-slidenumber">
    <<show-slidenumber>>
  </div>
</div>

</$list>

</$set>

